.search-block
    background-color rgba($color-dark, 0.8)
    position absolute
    top 0
    left 0
    width 100%
    height 100vh
    z-index 200
    padding 1rem
    box-sizing border-box
    text-align left

    .search-block__form
        .search-block__input
            width 100%
            padding 0.6rem 0.7rem
            border-radius 4px
            box-sizing border-box
            background rgba($color-dark,0.6)
            border 1px solid $color-white
            color $color-white
            font-weight 300
            margin-right 0.5rem

        .search-block__input::placeholder
            color $color-white

        .search-block__close
            color $color-white
            font-size 1.5rem
            display inline-block
            vertical-align top
            margin-top 0.4rem
